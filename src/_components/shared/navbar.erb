<header class="site-navbar">
  <div class="navbar-inner">
    <a href="/<%=@locale %>/" class="navbar-brand">
      <img src="<%= relative_url '/images/logo.png' %>" alt="SOSI" class="navbar-logo" />
      <span class="navbar-title"><%= @metadata.title %></span>
    </a>

    <button class="sidebar-toggle" id="sidebar-toggle" aria-label="Toggle sidebar">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <line x1="3" y1="12" x2="21" y2="12"></line>
        <line x1="3" y1="18" x2="21" y2="18"></line>
      </svg>
    </button>

    <nav class="navbar-nav">
      <%= render Shared::LanguageSwitcher.new(resource: @resource, locale: @locale) %>
    </nav>
  </div>
</header>
